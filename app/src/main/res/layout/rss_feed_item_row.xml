<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/rssFeedItemImageView"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/rss_no_image" />

    <TextView
        android:id="@+id/rssTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/rssFeedItemImageView"
        android:text="@string/row_title_text"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rssArticleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rssTitleTextView"
        android:layout_toEndOf="@id/rssFeedItemImageView"
        android:paddingBottom="10dp"
        android:text="@string/row_article_text" />

</RelativeLayout>