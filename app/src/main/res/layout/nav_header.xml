<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey2"
    android:clipToPadding="false"
>
<RelativeLayout
    android:id="@+id/relative_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/android_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/androidstudio" />

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/android_img"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/android_img"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:text="@string/app_name"
        android:textColor="@color/grey3"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:shadowColor="@color/grey"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"/>

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_title"
        android:layout_toEndOf="@id/android_img"
        android:text="@string/app_details1"
        android:layout_alignParentEnd="true"
        android:layout_alignEnd="@+id/android_img"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/grey3"
        android:textSize="12sp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/version_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_text"
        android:layout_toEndOf="@id/android_img"
        android:text="@string/app_version"
        android:layout_alignParentEnd="true"
        android:layout_alignEnd="@+id/android_img"
        android:paddingEnd="10dp"
        android:textColor="@color/grey3"
        android:textSize="12sp"
        android:textAlignment="center"/>

</RelativeLayout>

    <TextView
        android:id="@+id/names_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_1"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:shadowColor="@color/grey"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="@string/app_author"
        android:textColor="@color/grey3"
        android:textSize="15sp"
        android:textStyle="bold" />


</RelativeLayout>