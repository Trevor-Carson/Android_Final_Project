<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RSSFragment"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="30dp"
        android:background="@color/grey1"
        >
        <TextView
            android:id="@+id/rssTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/fragment_title"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/rssDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rssTitleTextView"
            android:layout_centerHorizontal="true"
            android:paddingBottom="20dp"
            android:text="@string/fragment_date"
            android:textAlignment="center"
            android:textSize="11sp"
            android:textColor="@color/white"/>
    </RelativeLayout>

        <TextView
            android:id="@+id/rssDescTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative1"
            android:paddingBottom="30dp"
            android:paddingStart="10dp"
            android:paddingTop="20dp"
            android:paddingEnd="10dp"
            android:text="@string/fragment_description"
            android:textSize="17sp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/rssLinkBelow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rssDescTextView"
            android:text="@string/link_below"
            android:autoLink="web"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/rssLinkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rssLinkBelow"
            android:text="@string/fragment_link"
            android:autoLink="web"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"/>


        <Button
            android:id="@+id/rssHideButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/hide_button"
            android:background="@color/grey2"
            android:textColor="@color/grey3"
            />
    </RelativeLayout>


</FrameLayout>